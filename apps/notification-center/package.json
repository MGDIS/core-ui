{
  "name": "notification-center",
  "private": true,
  "version": "1.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3210",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "pnpm lint:es && pnpm lint:prettier",
    "lint:fix": "pnpm lint:es:fix && pnpm lint:prettier:fix",
    "lint:es": "eslint '**/*.{ts,html}' --ignore-path ../../.gitignore",
    "lint:es:fix": "eslint '**/*.{ts,html}' --fix --ignore-path ../../.gitignore",
    "lint:prettier": "prettier --check '**/*.{cjs,json}' --ignore-path ../../.gitignore",
    "lint:prettier:fix": "prettier --write '**/*.{cjs,json}' --ignore-path ../../.gitignore"
  },
  "devDependencies": {
    "@mgdis/linting-angularjs": "workspace:*",
    "typescript": "5.6.3",
    "vite": "5.4.10"
  },
  "dependencies": {
    "@mgdis/mg-components": "workspace:*",
    "@mgdis/notification-center": "workspace:*",
    "@mgdis/styles": "workspace:*"
  }
}
