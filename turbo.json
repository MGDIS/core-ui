{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": ["GITLAB_CI", "CI", "NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "src/assets/**"]
    },
    "dev": {},
    "test": {},
    "test:unit": {},
    "test:e2e": {
      "dependsOn": ["^build"]
    },
    "test:e2e:playwright": {
      "dependsOn": ["build", "^build"]
    },
    "test:watch": {},
    "coverage": {
      "dependsOn": ["build", "^build"],
      "outputs": ["coverage/**", ".nyc_output/**"]
    },
    "lint": {},
    "lint:fix": {}
  }
}
