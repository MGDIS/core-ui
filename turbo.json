{
	"$schema": "https://turborepo.org/schema.json",
	"globalEnv": ["GITLAB_CI"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"]
		},
		"build:config": {
			"dependsOn": ["^build:config"],
			"outputs": ["dist/**"]
		},
		"dev": {},
		"test": {},
		"test:unit": {},
		"test:e2e": {},
		"test:e2e:playwright": {
			"dependsOn": ["build", "^build"]
		},
		"test:watch": {},
		"coverage": {
			"dependsOn": ["build", "^build"],
			"outputs": ["coverage/**", ".nyc_output/**"]
		},
		"lint": {
			"dependsOn": ["^build:config"]
		},
		"lint:fix": {
			"dependsOn": ["^build:config"]
		}
	}
}
