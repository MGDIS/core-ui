{
	"$schema": "https://turborepo.org/schema.json",
	"globalEnv": ["GITLAB_CI"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"]
		},
		"build:config": {
			"dependsOn": ["^build:config"],
			"outputs": ["dist/**"]
		},
		"dev": {
			"outputs": []
		},
		"test": {
			"outputs": []
		},
		"test:unit": {
			"outputs": []
		},
		"test:e2e": {
			"outputs": []
		},
		"test:e2e:playwright": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test:watch": {
			"outputs": []
		},
		"coverage": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**", ".nyc_output/**"]
		},
		"lint": {
			"dependsOn": ["^build:config"],
			"outputs": []
		},
		"lint:fix": {
			"dependsOn": ["^build:config"],
			"outputs": []
		}
	}
}
