{
  "name": "@mgdis/linting-stencil",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "build:config": "tsc --build --clean && tsc --build",
    "lint": "run-s lint:es lint:prettier",
    "lint:fix": "run-s lint:es:fix lint:prettier:fix",
    "lint:es": "eslint src/**/*.ts",
    "lint:es:fix": "eslint src/**/*.ts --fix",
    "lint:prettier": "prettier --check **/*.{js,ts,json}",
    "lint:prettier:fix": "prettier --write **/*.{js,ts,json}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "eslint-config-stencil": "workspace:*",
    "prettier-config": "workspace:*"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^4.9.5"
  }
}
