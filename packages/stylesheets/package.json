{
  "name": "@mgdis/stylesheets",
  "version": "0.0.0",
  "description": "MGDIS Stylesheets",
  "keywords": [
    "SCSS",
    "CSS"
  ],
  "author": "Simon Duhem <duhem-s@mgdis.fr>",
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "sass scss:dist -w",
    "build": "sass scss:dist",
    "build:min": "sass scss:dist -s compressed",
    "lint": "stylelint 'scss/**/*.{css,scss}'",
    "lint:fix": "stylelint 'scss/**/*.{css,scss}' --fix",
    "test:e2e:playwright": "pnpm dlx @playwright/test test"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "playwright-config": "workspace:*",
    "sass": "^1.58.0",
    "stylelint": "^15.10.2",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "dependencies": {
    "modern-normalize": "^2.0.0"
  }
}
