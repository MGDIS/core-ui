{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "compatibility": {
    "pnpm": "^8"
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "extends": ["config:base"],
  "baseBranches": ["master"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ]
}
